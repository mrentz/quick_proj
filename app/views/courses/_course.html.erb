<div class="card">
  <div class="card-header">
    <div class="fa fa-graduation-cap"></div>
    <%= link_to course.title, course %>
  </div>
  <div class="card-body">
    <small>
      <%= course.short_description %>
    </small>
  </div>
  <div class="card-footer">
    <div class="text-center">
      <%= number_to_currency(course.price) %>
    </div>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col-md-6 fa fa-globe-africa">
          <%= course.language %>
      </div>
      <div class="col-md-6 text-right fa fa-signal">
        <%= course.level %>
      </div>
    </div>
  </div>  
  <div class="card-footer">
    <div class="row">
      <div class="col-md-6 far fa-clock">
        <%= course.created_at.strftime('%d-%b-%Y') %>
      </div>
      <div class="col-md-6 fa fa-chalkboard-teacher text-right">
        <%= course.user %>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <%= link_to 'Show', course, class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-warning' %>
    <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' },
      class: 'btn btn-sm btn-danger' %>
  </div>
</div>
